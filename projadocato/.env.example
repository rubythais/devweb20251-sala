# Exemplo de arquivo .env para configuração de ambiente
# Copie este arquivo para .env e configure os valores

# Configuração geral
SECRET_KEY=your-secret-key-here
DEBUG=False

# Render.com configuration
RENDER_EXTERNAL_HOSTNAME=your-app-name.onrender.com

# Configuração do banco de dados (Render fornece DATABASE_URL automaticamente)
# DATABASE_URL será fornecida automaticamente pelo Render

# Configuração de email
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@adocato.com

# Configuração de cache (Redis - fornecido pelo Render)
# REDIS_URL será fornecida automaticamente pelo Render se você adicionar Redis

# Security
SECURE_SSL_REDIRECT=True
